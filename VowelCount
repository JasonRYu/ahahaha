def VowelCount(str)

  vowels = ["a", "e", "i", "o", "u"]
  
  arr = str.split("")
  
  result = []
  
  index = 0
  
  
  while arr[index] != nil
  
    if vowels.include?(arr[index]) == true
      
      result.push(arr[index])
        
    end
    
    index += 1
    
  end
  
  sum = result.length
  
  
  return sum
         
end
   
# keep this function call here 
# to see how to enter arguments in Ruby scroll down   
VowelCount(STDIN.gets)  


















  
