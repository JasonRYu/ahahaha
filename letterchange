def LetterChanges(str)

  # code goes here
  
  str = str.downcase
  
  str1 = str.tr('a-y', 'b-z')
  
  str2 = str1.tr('aeiou', 'AEIOU')
   
  return str2
  
end
   
# keep this function call here 
# to see how to enter arguments in Ruby scroll down   
LetterChanges(STDIN.gets)  


















  
