def LongestWord(sen)

  # code goes here
  abc = sen.scan(/\w+/) 
  
  index = 0
  result = ""
  while abc[index] != nil
  	
    if result.length < abc[index].length 
      
      result = abc[index]
      
    end
    
    index += index + 1
    
    
  end
  
  return result
         
end
   
# keep this function call here 
# to see how to enter arguments in Ruby scroll down   
LongestWord(STDIN.gets)  


















  
